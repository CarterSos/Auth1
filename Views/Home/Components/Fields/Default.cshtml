@model FieldsViewModel

<form asp-controller="Home" asp-action="Records" method="post">
    <div>
        <label asp-for="Sex">Sex:</label>
        <select asp-for="Sex" name="Sex">
            @foreach (var item in Model.Sex)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>

    <div>
        <label asp-for="TextileColor">Textile Color:</label>
        <select asp-for="TextileColor" name="TextileColor">
            @foreach (var item in Model.TextileColor)
            {
                <option asp-route-fieldColor="@item" asp-route-pageNum="1" value="@item">@item</option>
            }
        </select>
    </div>

    <button type="submit">Submit</button>
</form>


